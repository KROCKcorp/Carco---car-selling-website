@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
    #title {
        margin-top: 100px;
        margin-right: 100px;
    }

    .Register_Container h1{
        text-align:center;
    }

    .Register_Container h2 {
        text-align: center;
        font-size:25px;
    }

    .Register_Container {
        backdrop-filter: blur(7px);
        padding: 10px;
        padding-left: 40px;
        padding-right: 40px;
        border-radius: 30px;
        border: #ffff 1px solid;
    }

    .Register_Container hr {
            color: #ffff;
        }

    .Register_Container input {
            background: transparent;
            color: #ffff;
        }

        .Register_Container label {
            color: #ffff;
        }

    .Register_title h3, p {
        color: #ffff;
        text-align: center;
    }

    .Register_title span {
        color: #3e1892;
        font-size: 35px;
    }

    #registerSubmit {
        color: black;
        background: #ffff;
        border-radius: 10px;
        border: none;
        transition: 0.5s;
        margin-bottom: 10px;
    }

    #registerSubmit:hover {
            background: #3e1892;
    }

    .link a {
        color: #ffff;
        margin: 0px;
        text-decoration: none;
    }

        .link a:hover {
            color: #3e1892;
        }
</style>

<div class="row">
       <div id="title" class="col-md-6 col-md-offset-2">
        <section class="Register_title">
            <img width="100%" height="100%" src="~/img/carco.png" />
            <h3>Because You don't like to <span>search</span> around</h3>
            <p>Carco is where you will find new and used vehicles. Carco Motors is easy to navigate by vehicle type, category of items, sales and events, or brand and type of car, motorcycle, pickup, or SUV.</p>


        </section>
    </div>
    <div class="col-md-4">
        <section class="Register_Container">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <h2>Create a new account.</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.FirstName" class="form-control" maxlength="100" aria-required="true" placeholder="Kerolos" required />
                    <label asp-for="Input.FirstName">First Name</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-control" maxlength="100" aria-required="true" placeholder="Atef" required/>
                    <label asp-for="Input.LastName">Last Name</label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" maxlength="12" aria-required="true" placeholder="Atef" required />
                    <label asp-for="Input.PhoneNumber">Phone Number</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Address" class="form-control" maxlength="600" aria-required="true" placeholder="7a,5th settlement" required />
                    <label asp-for="Input.Address">Address</label>
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.BirthDate" class="form-control" aria-required="true" placeholder="28-9-2000" required/>
                    <label asp-for="Input.BirthDate">Birth Date</label>
                    <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" maxlength="256" aria-required="true" placeholder="name@example.com" required />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" required />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" required />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
            <p class="link">
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </p>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
